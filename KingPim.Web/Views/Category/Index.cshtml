@model IEnumerable<Category>

<!-- CRUD-buttons to modals:-->
<div class="float-sm-right" style="margin-bottom:10px; margin-top:80px">
    <button type="button" class="btn btn-sm btn-success" name="createSomething" id="createSomething" data-toggle="modal" data-target="#createModal">Create</button>
    <button type="button" class="btn btn-sm btn-warning" name="updateSomething" id="updateSomething" data-toggle="modal" data-target="#updateModal">Update</button>
    <button type="button" class="btn btn-sm btn-danger" name="deleteSomething" id="deleteSomething" data-toggle="modal" data-target="#deleteModal">Delete</button>
</div>

<!-- The title and all the other information that goes to the RenderBody: -->
<div class="container">
    <h1>Category</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name:</th>
                <th scope="col">Published Date:</th>
                <th scope="col">Updated Date:</th>
                <th scope="col">SubCategories:</th>
            </tr>
        </thead>
        @foreach (var cat in Model)
        {
            <tbody>
                <tr>
                    <th scope="row"><input type="checkbox" class="chk" value="@cat.Id" /> @cat.Name</th>
                    <td>@cat.Published</td>
                    <td>@cat.UpdatedDate</td>
                    <td>@cat.SubCategories</td>
                </tr>
            </tbody>

            <!-- This is the createModal to create a category: -->
            <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModal" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mx-auto text-center" id="createModalLabel">You are about to create a category.</h5>
                        </div>
                        <div class="modal-body">
                            <!-- FORM SKA IN HÄR: -->
                            <p class="text-center">Make sure to save your changes.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                            <form asp-action="Update" method="post">
                                <input type="hidden" name="categoryId" value="@cat.Id" />
                                <button type="submit" id="updateSomething" class="btn btn-success">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- This is the updateModal to update a category: -->
            <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModal" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mx-auto text-center" id="updateModalLabel">You are about to update a category.</h5>
                        </div>
                        <div class="modal-body">
                            <!-- FORM SKA IN HÄR: -->
                            <p class="text-center">Make sure to save your changes.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                            <form asp-action="Update" method="post">
                                <input type="hidden" name="categoryId" value="@cat.Id" />
                                <button type="submit" id="updateSomething" class="btn btn-success">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- This is the deleteModal to delete a category: -->
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title mx-auto text-center" id="deleteModalLabel">You are about to delete a category.</h5>
                        </div>
                        <div class="modal-body">
                            <p class="text-center">Are your sure that you want to delete a category?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="categoryId" value="@cat.Id" />
                                <button type="submit" id="deleteSomething" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </table>
</div> 

