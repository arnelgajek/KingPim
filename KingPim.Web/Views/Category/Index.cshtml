@model IEnumerable<Category>

<!-- CRUD-buttons to modals:-->
<div class="float-sm-right" style="margin-bottom:10px; margin-top:80px">
    <button type="button" class="btn btn-sm btn-success" name="createSomething" id="createSomething" data-toggle="modal" data-target="#createModal">Create</button>
    <button type="button" class="btn btn-sm btn-warning" name="updateSomething" id="updateSomething" data-toggle="modal" data-target="#updateModal">Update</button>
    <button type="button" class="btn btn-sm btn-danger" name="deleteSomething" id="deleteSomething" data-toggle="modal" data-target="#deleteModal">Delete</button>
</div>

<!-- The title and all the other information that goes to the RenderBody: -->
<div class="container">
    <h1>Category</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name:</th>
                <th scope="col">Published Date:</th>
                <th scope="col">Updated Date:</th>
                <th scope="col">SubCategories:</th>
            </tr>
        </thead>
        @foreach (var cat in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@cat.Name</th>
                    <td>@cat.Published</td>
                    <td>@cat.UpdatedDate</td>
                    <td>@cat.SubCategories</td>
                </tr>
                </tbody>
                }
        </table>
</div> 

