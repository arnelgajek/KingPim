@model IEnumerable<Category>

<!-- CRUD-buttons to modals:-->
<div class="float-sm-right" style="margin-bottom:10px; margin-top:80px">
    <button type="button" class="btn btn-md btn-success" name="createSomething" id="createSomething">Create</button>
    <button type="button" class="btn btn-md btn-warning" name="updateSomething" id="updateSomething">Update</button>
    <button type="button" class="btn btn-md btn-danger" name="deleteSomething" id="deleteSomething">Delete</button>
</div>

<div class="container">
    <h1>Category</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name:</th>
                <th scope="col">Published:</th>
                <th scope="col">Updated Date:</th>
                <th scope="col">SubCategories:</th>
            </tr>
        </thead>
        @foreach (var cat in Model)
        {
            <tbody>
                <tr>
                    <th scope="row"><input type="checkbox" class="chk" value="@cat.Id" /> @cat.Name</th>
                    <!-- TODO: Implement button to Published to send value to Db with true=green button/false=red button-->
                    <td>@cat.Published</td>
                    <td>@cat.UpdatedDate.ToString("yyyy-MM-dd")</td>
                    <td>@cat.SubCategories.FirstOrDefault().Name</td>
                </tr>
            </tbody>
        }
    </table>
</div> 

<div id="tempModal" style="display:none">
    @await Component.InvokeAsync("Crud")
</div>


<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script>
    $(document).ready(function () {

        // CREATE:
        $('#createSomething').click(function () {
            $('#tempModal').show();
            $('#createModal').modal('show');
        });

        // UPDATE:
        $('#updateSomething').click(function () {
            $('#tempModal').show();
            $('#updateModal').modal('show');
        });

        // DELETE:
        $('#deleteSomething').click(function () {
            $('#tempModal').show();
            $('#deleteModal').modal('show');
        });
    });
</script>
