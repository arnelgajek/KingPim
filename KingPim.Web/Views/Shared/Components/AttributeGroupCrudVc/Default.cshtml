@model AttributeGroupViewModel

<!-- This is the createModal to create a attributegroup: -->
<div class="modal fade" id="createModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mx-auto text-center" id="createModalLabel"><strong>CREATE</strong></h5>
            </div>
            <form asp-controller="AttributeGroup" asp-action="Add" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <p>
                            <label asp-for="@Model.Name" hidden></label>
                            <input type="text" asp-for="@Model.Name" placeholder="Name..." class="form-control form-control-sm" />
                        </p>
                    </div>
                    <div class="form-group">
                        <p>
                            <label asp-for="@Model.Description" hidden></label>
                            <input type="text" asp-for="@Model.Description" placeholder="Description..." class="form-control form-control-sm" />
                        </p>
                    </div>
                    <div class="form-group">
                        <select asp-for="OneAttributeId" class="form-control" required>
                            <option value="" disabled selected>Select an attribute</option>
                            @foreach (var oneAttr in Model.OneAttributes)
                            {
                                <option value="@oneAttr.Id">@oneAttr.Name</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-toolbar' btn btn-sm" style="margin-top:10px;" id="addAttributeBtn">Add +</button>
                            <div class="addAttribute">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="saveAddedAttributes">
                                <!-- I'll maybe need this later on... -->
                            </div>
                        </div>
                    </div>
                    <p class="text-center"><strong>Make sure to save your changes.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    <input type="hidden" name="attributegroupId" value="@Model.Id" />
                    <button type="submit" id="createSomething" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- This is the updateModal to update a attributegroup: -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mx-auto text-center" id="updateModalLabel"><strong>UPDATE</strong></h5>
            </div>
            <form asp-controller="AttributeGroup" asp-action="Update" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <p>
                            <label asp-for="@Model.Name" hidden></label>
                            <input type="text" asp-for="@Model.Name" placeholder="Name..." class="form-control form-control-sm" />
                        </p>
                    </div>
                    <div class="form-group">
                        <p>
                            <label asp-for="@Model.Description" hidden></label>
                            <input type="text" asp-for="@Model.Description" placeholder="Description..." class="form-control form-control-sm" />
                        </p>
                    </div>
                    <div class="form-group">
                        <select asp-for="OneAttributeId" class="form-control" required>
                            <option value="" disabled selected>Select an attribute</option>
                            @foreach (var oneAttr in Model.OneAttributes)
                            {
                                <option value="@oneAttr.Id">@oneAttr.Name</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-toolbar' btn btn-sm" style="margin-top:10px;" id="addAttributeBtn">Add +</button>
                            <div class="addAttribute">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="saveAddedAttributes">
                                <!-- I'll maybe need this later on... -->
                            </div>
                        </div>
                    </div>
                    <p class="text-center"><strong>Make sure to save your changes.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" id="confirmUpdate" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- This is the deleteModal to delete a attributegroup: -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mx-auto text-center" id="deleteModalLabel"><strong>DELETE</strong></h5>
            </div>
            <div class="modal-body">
                <p class="text-center"><strong></strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" id="confirmDelete" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>